{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "node16",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "test/fixtures/**/*"
  ]
}
